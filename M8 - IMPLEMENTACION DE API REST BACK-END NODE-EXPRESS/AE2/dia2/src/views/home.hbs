<div id="AgregarCancion">
  <h2 class="pt-3">Agenda Salon üíÖüèª</h2>

  <div class="container pt-5 d-flex">
    <div class="col-6">
      <h2>Nueva Cita</h2>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Fecha:</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="fecha" />
        </div>
      </div>
      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Hora: </label>
        <div class="col-sm-10">
          <input type="time" class="form-control" id="hora" />
        </div>
      </div>
      <div class="form-group row">
        <label for="rut" class="col-sm-2 col-form-label">Servicio:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="servicio" />
        </div>
      </div>
      <div class="form-group row">
        <label for="rut" class="col-sm-2 col-form-label">Peluquero:</label>
        <div class="col-sm-10">
          <select class="custom-select" id="peluquero">
            <option selected disabled>Selecciona un peluquero</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="rut" class="col-sm-2 col-form-label">Cliente:</label>
        <div class="col-sm-10">
          <select class="custom-select" id="cliente">
            <option selected disabled>Selecciona un cliente</option>
          </select>
        </div>
      </div>
      <button
        onclick="nuevaCita()"
        id="agregarCita"
        class="m-auto btn btn-success"
      >
        Agregar
      </button>
      <button id="editar" class="m-auto btn btn-info">
        Editar
      </button>
    </div>
    <div class="col-6">
      <h2>Nuevo Cliente</h2>
      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label">Nombre:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="nombre" />
        </div>
      </div>
      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Telefono: </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="telefono" />
        </div>
      </div>
      <div class="form-group row">
        <label for="rut" class="col-sm-2 col-form-label">Correo:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="correo" />
        </div>
      </div>
      <button
        onclick="nuevoCliente()"
        id="agregarCliente"
        class="m-auto btn btn-success"
      >
        Agregar
      </button>
    </div>
  </div>
</div>
<div id="ListaCitas">
  <hr />
  <hr />
  <h2>Agenda</h2>
  <div class="mx-3 pt-5">
    <table class="table table-dark">
      <thead>
        <tr>
          <th scope="col">Fecha</th>
          <th scope="col">Hora</th>
          <th scope="col">Servicio</th>
          <th scope="col">Cliente</th>
          <th scope="col">Telefono</th>
          <th scope="col">Correo</th>
          <th scope="col">Peluquero</th>
          <th scope="col">Especialidad</th>
          <th scope="col">-</th>
        </tr>
      </thead>
      <tbody id="cuerpo"></tbody>
    </table>
  </div>
</div>